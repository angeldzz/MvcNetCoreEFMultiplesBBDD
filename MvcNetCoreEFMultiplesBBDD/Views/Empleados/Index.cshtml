@model IEnumerable<MvcNetCoreEFMultiplesBBDD.Models.VistaEmpleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dept_NO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dept_NO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Empleado" class="btn btn-warning">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id_Empleado" class="btn btn-primary">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id_Empleado" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
